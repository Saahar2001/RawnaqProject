@model IEnumerable<RawnaqProject.Models.orders>
@{
    Layout = "~/Views/Shared/layoutCustomer.cshtml";

}
<head>
    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            position: relative;
            min-height: 100vh; 
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('/images/back2.png') no-repeat center center fixed;
                background-size: cover;
                opacity: 0.6;
                z-index: -1;
            }
            h1{
                text-align:center;
            color: #1d4e89;
            }
    </style>
</head>
<body>
<h1>My Orders</h1>
<table class="table">
    <thead>
        <tr>
            <th>   @Html.DisplayNameFor(model => model.custname)</th>
            <th>  @Html.DisplayNameFor(model => model.total) </th>
            <th>  @Html.DisplayNameFor(model => model.orderdate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>   @Html.DisplayFor(modelItem => item.custname) </td>
                <td> @Html.DisplayFor(modelItem => item.total)</td>
                <td>  @Html.DisplayFor(modelItem => item.orderdate)</td>
                <td>  <a asp-action="Orderline" asp-route-orid="@item.Id">Details</a> </td>
            </tr>
        }
    </tbody>
</table>
</body>