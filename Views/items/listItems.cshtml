@model IEnumerable<RawnaqProject.Models.items>

@{
    ViewData["Title"] = "listItems";
   
        Layout = "~/Views/Shared/layoutMaster.cshtml";
    

}

<body>
    <h1>List Items</h1>

    <table class="table">
        <thead>
            <tr class="header-row">
                <th>ItemID</th>
                <th>Item name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="item-row">
                    <td>@item.Id</td>
                    <td>@item.name</td>
                    <td>@item.description</td>
                    <td>@item.price</td>
                    <td>@item.quantity</td>
                    <td>@item.category</td>
                </tr>
            }
        </tbody>
    </table>
</body>

<style>
    .table {
        width: 100%; /* Full width */
        margin: 0 auto; /* Center the table */
        border-collapse: collapse;
        font-size: 18px;
        background-color: rgba(255, 249, 243, 0.8);
        border-radius: 10px;
        overflow: hidden;
    }

        .table th, .table td {
            text-align: center;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #a2cff7;
            color: white;
            font-weight: bold;
        }

            .table th:nth-child(1), .table td:nth-child(1) {
                width: auto;
            }
        .table tr:nth-child(even) {
            background-color: rgba(169, 169, 169, 0.3);
        }

        .table tr:nth-child(odd) {
            background-color: white;
        }

    body {
        margin: 0;
        font-family: 'Inter', sans-serif;
        position: relative;
        min-height: 100vh; /* Ensure the body takes at least the full height of the page */
    }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/images/back2.png') no-repeat center center fixed;
            background-size: cover;
            opacity: 0.6;
            z-index: -1;
        }
        h1{
            text-align:center;
        color: #1d4e89;
        }
</style>