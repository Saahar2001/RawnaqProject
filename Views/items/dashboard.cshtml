@{
    ViewData["Title"] = "dashboard";
    Layout = "~/Views/Shared/layoutMaster.cshtml";
}
<html>
<head>

    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            align-items: center;
            background: url('/images/back2.png') no-repeat center center fixed;
            background-size: cover;
        }

            body::before {
                position: fixed;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.6);
            }

        h1 {
            text-align: center;
            font-size: 48px;
            font-weight: 500;
            color: #1d4e89;
            margin-bottom: 20px;
        }

        #chart_div {
            margin: 0 auto;
            text-align: center;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .card {
            width: 250px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            text-align: center;
        }

        .card-header {
            font-size: 18px;
            font-weight: bold;
            padding: 10px;
            background-color: #a2cff7; /* Previous blue color */
            text-align: center;
        }


        .card-body {
            padding: 10px;
        }

        .card-footer {
            padding: 10px;
            font-size: 16px;
            background: #f4f4f4;
        }

        .card-img-top {
            height: 150px;
            width: 100%;
            object-fit: cover;
        }
    </style>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Category');
            data.addColumn('number', 'items');
            data.addRows([
                ['Monthly Box', @ViewData["d1"]],
                ['Happiness Boxes', @ViewData["d2"]],
                ['Design Your Box', @ViewData["d3"]],

            ]);
            var options = {
                'title': 'Number of Items',
                'width': 400,
                'height': 300
            };
            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>

</head>
<body>
    <h1>Dashboard</h1>

    <div id="chart_div"></div>

    <div class="row">

        <div class="col-md-3">
            <div class='card'>
                <div class='card-header  text-center'>Monthly Box</div>
                <div class='card-body'><img src='~/images/cata1.jpg' ; class="card-img-top" style="max-height: 150px; object-fit: cover;"></div>
                <div class='card-footer'>
                    Number of Boxes <div> @ViewData["d1"] </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class='card'>
                <div class='card-header  text-center'>Happiness Boxes</div>
                <div class='card-body'><img src='~/images/cata2.jpg' ; class="card-img-top" style="max-height: 150px; object-fit: cover;"></div>
                <div class='card-footer'>
                    Number of Boxes <div>@ViewData["d2"] </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class='card'>
                <div class='card-header  text-center'>Design Your Box</div>
                <div class='card-body'><img src='~/images/cata3.jpg' ; class="card-img-top" style="max-height: 150px; object-fit: cover;"></div>
                <div class='card-footer'>
                    Number of Boxes <div>@ViewData["d3"] </div>
                </div>
            </div>
        </div>
    </div>

</body>


</html>

