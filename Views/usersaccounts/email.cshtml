@{
    ViewData["Title"] = "email";
    Layout = "~/Views/Shared/layoutMaster.cshtml";
}


<body>
    <form asp-action="email">
        <h1>Send Email</h1>

        <div class="form-group">
            <label class="control-label">Customer email address:</label>
            <input name="address" class="form-control" placeholder="Enter the customer email" required />
            <br />
        </div>
        <div class="form-group">
            <label for="subject" class="control-label">Subject:</label>
            <input name="subject" class="form-control" placeholder="Enter the subject" required />
            <br />
        </div>
        <div class="form-group">
            <label for="body" class="control-label">Message: </label>
            <textarea name="body" rows="4" cols="50" placeholder="Enter your message" required> </textarea>
        </div>
        <input type="submit" value="Send Email" class="btn btn-primary" />
        <p> @ViewData["message"]</p>
    </form>
</body>
<style>
    body {
        margin: 0;
        font-family: 'Inter', sans-serif;
        position: relative;
        min-height: 100vh;
    }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/images/back2.png') no-repeat center center fixed;
            background-size: cover;
            opacity: 0.6;
            z-index: -1;
        }

    h1 {
        text-align: center;
        font-size: 32px; /* Reduced font size */
        font-weight: 500;
        color: #1d4e89;
        margin-top: 10px;
        margin-bottom: 15px;
    }

    form {
        position: relative;
        width: 90%;
        max-width: 450px; /* Reduced max-width for a smaller form */
        margin: 10px auto;
        background: rgba(162, 207, 247, 0.7);
        border-radius: 15px;
        padding: 20px;
        box-sizing: border-box;
    }

    .form-group label {
        font-size: 18px; /* Reduced font size */
        font-weight: 400;
        color: #1A3D6D;
    }

    .form-control, textarea {
        width: 100%;
        height: 40px; /* Reduced height */
        padding: 8px;
        font-size: 14px; /* Smaller font */
        margin-bottom: 15px;
        background: rgba(255, 249, 243, 0.8);
        border: none;
        border-radius: 8px;
        box-sizing: border-box;
    }

    textarea {
        height: 80px; /* Adjusted textarea height */
    }

    input[type="submit"] {
        display: block;
        width: 120px; /* Smaller button */
        height: 40px;
        margin: 15px auto;
        background: rgba(79, 189, 186, 0.9);
        color: #FFF9F3;
        font-size: 16px; /* Reduced font size */
        border: 2px solid #F4D6A0;
        border-radius: 8px;
        cursor: pointer;
        text-align: center;
    }

    p {
        text-align: center;
        font-size: 14px; /* Reduced font size */
        color: #1A3D6D;
        margin-top: 10px;
    }
</style>


