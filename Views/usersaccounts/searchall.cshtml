@model RawnaqProject.Models.usersaccounts
@{
    ViewData["Title"] = "searchall";
    Layout = "~/Views/Shared/layoutMaster.cshtml";
}
<head>
    <style>

        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            position: relative;
            min-height: 100vh;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url('/images/back2.png') no-repeat center center fixed;
                background-size: cover;
                opacity: 0.6;
                z-index: -1;
            }

        h1 {
            text-align: center;
            font-size: 32px; /* Reduced font size */
            font-weight: 500;
            color: #1d4e89;
            margin-top: 10px;
            margin-bottom: 15px;
        }

        form {
            position: relative;
            width: 90%;
            max-width: 450px; /* Reduced max-width for a smaller form */
            margin: 10px auto;
            background: rgba(162, 207, 247, 0.7);
            border-radius: 15px;
            padding: 20px;
            box-sizing: border-box;
        }

        .form-group label {
            font-size: 18px; /* Reduced font size */
            font-weight: 400;
            color: #1A3D6D;
        }

        input[type="submit"] {
            display: block;
            width: 120px; /* Smaller button */
            height: 40px;
            margin: 15px auto;
            background: rgba(79, 189, 186, 0.9);
            color: #FFF9F3;
            font-size: 16px; /* Reduced font size */
            border: 2px solid #F4D6A0;
            border-radius: 8px;
            cursor: pointer;
            text-align: center;
        }

        p {
            text-align: center;
            font-size: 14px; /* Reduced font size */
            color: #1A3D6D;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <form asp-action="searchall">
        <h1>Users Search</h1>
        <div class="form-group">
        </div>
        <div class="form-group">
            <label class="control-label">Role</label>
            <select class="form-control" name="cata" id="ca" onchange="getrole()">
                <option value="">Please select</option>
                <option value="admin">Admin</option>
                <option value="customer">Customer</option>
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">Name</label>
            <select class="form-control" name="n" id="ti"> </select>
        </div>
        <input type="submit" value="Find" class="btn btn-default" />
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.pass)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.pass)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.role)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.role)
            </dd>
        </dl>
    </form>

    <script>
        async function getrole() {
            var cc = document.getElementById('ca').value;
            var response = await fetch('/getnameAPI/' + cc.toString())
            let x = await response.json();
            var dd = "<option> Please select</option>";
            for (i = 0; i < x.length; i++) {
                dd += "<option>" + x[i].name + "</option>";
            }
            document.getElementById("ti").innerHTML = dd;
        }
    </script>



</body>
